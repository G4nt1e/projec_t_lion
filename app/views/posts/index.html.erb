<p id="notice"><%= notice %></p>

<h1>파일목록</h1>

<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>사진</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
          <td><%= image_tag("#{post.image}") %></td>
        <td><%= link_to '자세히', post %></td>
        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

